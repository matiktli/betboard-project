{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Template responsible for creation of dynamo-db part",
    "Outputs": {},
    "Parameters": {
        "Environment": {
            "AllowedValues": [
                "prod",
                "sbox",
                "local"
            ],
            "Default": "prod",
            "Description": "Enter environment name, by default prod.",
            "Type": "String"
        }
    },
    "Resources": {
        "teamTable": {
            "Properties": {
                "AttributeDefinitions": [
                    {
                        "AttributeName": "team_id",
                        "AttributeType": "N"
                    },
                    {
                        "AttributeName": "country",
                        "AttributeType": "S"
                    },
                    {
                        "AttributeName": "leauge",
                        "AttributeType": "S"
                    },
                    {
                        "AttributeName": "name",
                        "AttributeType": "S"
                    }
                ],
                "BillingMode": "PAY_PER_REQUEST",
                "KeySchema": [
                    {
                        "AttributeName": "team_id",
                        "KeyType": "HASH"
                    }
                ],
                "TableName": {
                    "Fn::Sub": [
                        "ENV-team",
                        {
                            "ENV": {
                                "Ref": "Environment"
                            }
                        }
                    ]
                },
                "Tags": [
                    "betboard-project"
                ]
            },
            "Type": "AWS::DynamoDB::Table"
        },
        "teamStatsGlobalTable": {
            "Properties": {
                "AttributeDefinitions": [
                    {
                        "AttributeName": "team_id",
                        "AttributeType": "N"
                    },
                    {
                        "AttributeName": "stats_type",
                        "AttributeType": "S"
                    },
                    {
                        "AttributeName": "stats_value",
                        "AttributeType": "N"
                    }
                ],
                "BillingMode": "PAY_PER_REQUEST",
                "KeySchema": [
                    {
                        "AttributeName": "team_id",
                        "KeyType": "HASH"
                    },
                    {
                        "AttributeName": "stats_type",
                        "KeyType": "RANGE"
                    }
                ],
                "TableName": {
                    "Fn::Sub": [
                        "ENV-team-stats-global",
                        {
                            "ENV": {
                                "Ref": "Environment"
                            }
                        }
                    ]
                },
                "Tags": [
                    "betboard-project"
                ]
            },
            "Type": "AWS::DynamoDB::Table"
        },
        "teamPlayersTable": {
            "Properties": {
                "AttributeDefinitions": [
                    {
                        "AttributeName": "team_id",
                        "AttributeType": "N"
                    },
                    {
                        "AttributeName": "player_id",
                        "AttributeType": "S"
                    }
                ],
                "BillingMode": "PAY_PER_REQUEST",
                "KeySchema": [
                    {
                        "AttributeName": "team_id",
                        "KeyType": "HASH"
                    }
                ],
                "TableName": {
                    "Fn::Sub": [
                        "ENV-team-players",
                        {
                            "ENV": {
                                "Ref": "Environment"
                            }
                        }
                    ]
                },
                "Tags": [
                    "betboard-project"
                ]
            },
            "Type": "AWS::DynamoDB::Table"
        },
        "playerTable": {
            "Properties": {
                "AttributeDefinitions": [
                    {
                        "AttributeName": "player_id",
                        "AttributeType": "N"
                    },
                    {
                        "AttributeName": "name",
                        "AttributeType": "S"
                    },
                    {
                        "AttributeName": "position",
                        "AttributeType": "S"
                    }
                ],
                "BillingMode": "PAY_PER_REQUEST",
                "KeySchema": [
                    {
                        "AttributeName": "player_id",
                        "KeyType": "HASH"
                    }
                ],
                "TableName": {
                    "Fn::Sub": [
                        "ENV-player",
                        {
                            "ENV": {
                                "Ref": "Environment"
                            }
                        }
                    ]
                },
                "Tags": [
                    "betboard-project"
                ]
            },
            "Type": "AWS::DynamoDB::Table"
        },
        "playerStatsGlobalTable": {
            "Properties": {
                "AttributeDefinitions": [
                    {
                        "AttributeName": "player_id",
                        "AttributeType": "N"
                    },
                    {
                        "AttributeName": "stats_type",
                        "AttributeType": "S"
                    },
                    {
                        "AttributeName": "stats_value",
                        "AttributeType": "N"
                    }
                ],
                "BillingMode": "PAY_PER_REQUEST",
                "KeySchema": [
                    {
                        "AttributeName": "player_id",
                        "KeyType": "HASH"
                    },
                    {
                        "AttributeName": "stats_type",
                        "KeyType": "RANGE"
                    }
                ],
                "TableName": {
                    "Fn::Sub": [
                        "ENV-player-stats-global",
                        {
                            "ENV": {
                                "Ref": "Environment"
                            }
                        }
                    ]
                },
                "Tags": [
                    "betboard-project"
                ]
            },
            "Type": "AWS::DynamoDB::Table"
        }
    }
}
